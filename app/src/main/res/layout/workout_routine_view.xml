<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routineCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lastTrainingDoneDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Last training: 19/03/2019" />

        <TextView
            android:id="@+id/trainingRoutineTitleTxtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/lastTrainingDoneDate"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/lastTrainingDoneDate"
            app:layout_constraintTop_toBottomOf="@+id/lastTrainingDoneDate"
            tools:text="Upper Body Workout" />

        <TextView
            android:id="@+id/routineDaysTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/trainingRoutineTitleTxtV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/trainingRoutineTitleTxtV"
            app:layout_constraintTop_toBottomOf="@+id/trainingRoutineTitleTxtV"
            tools:text="Monday and Thursday" />

        <Button
            android:id="@+id/editBtnScheduled"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:onClick="editWorkoutHandler"
            android:text="@string/buttonEditText"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/lastTrainingDoneDate"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/startWorkoutBtn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startWorkoutHandler"
            android:text="@string/startWorkoutBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/routineDaysTxt" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>